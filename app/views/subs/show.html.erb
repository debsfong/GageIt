<h1><%= @sub.title %></h1>
<h3> <%= @sub.description %> </h3>

<% if current_user.id == @sub.moderator_id %>
  <%= button_to "Edit Sub-Gage", edit_sub_url(@sub), method: :get %><br>
<% end %>
<%= button_to "Add Post", new_sub_post_url(@sub.id), method: :get %><br><br>


<% @sub.posts.each do |post| %>
  <%= link_to "#{post.title}", sub_post_url(@sub.id, post) %>
  <% if current_user.id == @sub.moderator_id %>
    <%= button_to "Remove Post", sub_post_url(@sub.id, post), method: :delete %>
  <% end %><br>
<% end %>
